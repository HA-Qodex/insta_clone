<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notProImage_Id"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/face" />

    <ImageView
        android:id="@+id/notImage_Id"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/notImage_Id"
        android:layout_toEndOf="@id/notProImage_Id"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/notProName_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huzaifa Ahmed"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notText_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have new notification"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>