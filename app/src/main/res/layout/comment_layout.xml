<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentProImage_Id"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:src="@drawable/face" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/commentProImage_Id"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_toStartOf="@id/commentLike_Id"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commentProName_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huzaifa Ahmed"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/commentTextView_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is comment"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/commentLike_Id"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/ic_heart"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"/>

</RelativeLayout>