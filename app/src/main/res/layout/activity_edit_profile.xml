<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/editBar_Id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10ssp"
        >

        <ImageView
            android:id="@+id/editGoBackButton_Id"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_17ssp"
            android:layout_toRightOf="@id/editGoBackButton_Id"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/editPostButton_Id"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editBar_Id">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/editProPic_Id"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/face"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/editButton_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change profile photo"
                android:layout_below="@id/editProPic_Id"
                android:layout_centerHorizontal="true"
                android:textColor="@color/fb_color"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <EditText
                android:id="@+id/editName_Id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Name"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/editButton_Id"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editUserName_Id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="UserName"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/editName_Id"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editPhone_Id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Phone"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/editUserName_Id"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editBio_Id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Bio"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/editPhone_Id"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>